/* pages/index/index.wxss */

.content-container{
    text-align: center;
    width: 100%;
    min-height: 100%;
    background: #EFEFEF;
    font-size: 0;
    padding: 30rpx 0;
}
/* 模块 */
.index-block{
    margin: 0 30rpx 30rpx 30rpx;
    padding: 30rpx;
    background-color: #FFFFFF;
    box-shadow: 0px 0px 8px 0px rgba(186,186,186,0.5);
}

/* 个人信息 */
.userImage{
    margin:20rpx 0;
}
.userImage image{
    width: 150rpx;
    height: 150rpx;
    border-radius: 100rpx;
    box-shadow: 0px 0px 10px 2px rgba(186,186,186,0.5);
}
.userName,.titleName{
    font-size: 28rpx;
    color: #000;
    line-height: 28rpx;
    font-weight: bold;
    background-color: #fff;
}
.message-item{
    font-size: 28rpx;
    color: #000;
    line-height: 28rpx;
    margin: 15rpx 0;
}
.contact{
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin: 20rpx 0;
}
.contact-left{
    font-size: 28rpx;
    color: #000;
    line-height: 28rpx;
    text-align: left;
    margin: 40rpx 0 0rpx;
    padding: 20rpx 0 0;
}
.contact-left .item{
    padding: 5rpx 0;
    display: flex;
    justify-content: left;
    align-items: center;
    line-height: 20px;
}
.contact-item{
    font-size: 28rpx;
    color: #000;
    line-height: 28rpx;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
}
.KFBtu{
    opacity: 0;
    position: absolute;
    width: 100% !important;
    height: 3%;
    top: 0;
    left: 0;
}

.wechat_icon{
    width: 30rpx;
    height: 30rpx;
    margin-right: 5rpx;
}

.title-block {
    height: 22px;
    position: relative;
}
.liner {
    width:100%;
    height:1px;
    background-color: #ccc;
    position: relative;
    top:50%;
}
.title-item {
    text-align:center;
    width:120px;
    height:22px;
    line-height: 22px;
    margin:0 auto;
    position: relative;
    z-index:3;
}

.title_icon{
    width: 50rpx;
    height: 50rpx;
    margin-bottom: 10rpx;
}

/* 按钮 */
.buttons{
    display: flex;
    align-items: center;
    margin-top: 10rpx;
}
.go-button{
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    border-radius: 20rpx;
    margin-right: 20rpx;
    background-color: #ccc;
    width: 100rpx;
}
.button_icon{
    width: 50rpx;
    height: 50rpx;
    margin-right: 10rpx;

}

