/* pages/index/index.wxss */

.content-container{
    text-align: center;
    width: 100%;
    min-height: 100%;
    background: #EFEFEF;
    font-size: 0;
    padding: 30rpx 0;
}
.display-block{
    display: flex;
    align-items: center;
}
/* 模块 */
.index-block{
    margin: 0 30rpx 30rpx 30rpx;
    padding: 30rpx;
    background-color: #FFFFFF;
    box-shadow: 0px 0px 8px 0px rgba(186,186,186,0.5);
}

/* 个人信息 */
.userImage{
    margin:20rpx 0;
}
.userImage image{
    width: 150rpx;
    height: 150rpx;
    border-radius: 100rpx;
    box-shadow: 0px 0px 10px 2px rgba(186,186,186,0.5);
}
.userName,.titleName{
    font-size: 28rpx;
    color: #000;
    line-height: 28rpx;
    font-weight: bold;
    background-color: #fff;
}
.message-item{
    font-size: 28rpx;
    color: #000;
    line-height: 28rpx;
    margin: 15rpx 0;
}
.contact{
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin: 20rpx 0;
}
.contact-left{
    font-size: 28rpx;
    color: #333;
    line-height: 28rpx;
    text-align: left;
    margin: 40rpx 0 0rpx;
    padding: 20rpx 0 0;
}
.contact-left .item{
    padding: 5rpx 0;
    display: flex;
    justify-content: left;
    align-items: center;
    line-height: 20px;
}
.contact-item{
    font-size: 28rpx;
    color: #000;
    line-height: 28rpx;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
}
.KFBtu{
    opacity: 0;
    position: absolute;
    width: 100% !important;
    height: 3%;
    top: 0;
    left: 0;
}

.wechat_icon{
    width: 30rpx;
    height: 30rpx;
    margin-right: 5rpx;
}

.title-block {
    height: 22px;
    position: relative;
}
.liner {
    width:100%;
    height:1px;
    background-color: #ccc;
    position: relative;
    top:50%;
}
.title-item {
    text-align:center;
    width:120px;
    height:22px;
    line-height: 22px;
    margin:0 auto;
    position: relative;
    z-index:3;
}

.title_icon{
    width: 50rpx;
    height: 50rpx;
    margin-bottom: 10rpx;
}

/* 按钮 */
.buttons{
    display: flex;
    align-items: center;
    margin-top: 10rpx;
}
.go-button{
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    border-radius: 20rpx;
    margin-right: 20rpx;
    background-color: #ccc;
    width: 100rpx;
}
.button_icon{
    width: 50rpx;
    height: 50rpx;
    margin-right: 10rpx;
}

/* 工作经历 */
.workTCont{
    color: #666666;
}
.workTime{
    display: flex;
    border: 1px solid #3399FF;
    width: 260rpx;
    border-radius: 10px;
    margin: 10rpx 0;
    font-size: 24rpx;
    line-height: 24rpx;
}
.workType{
    background: #3399FF;
    color: #FFF;
    border-radius: 10px 0 0 10px;
    padding: 10rpx;
}
.workDate{
    padding: 10rpx;
}
.position{
    margin-left: 20rpx;
    display: flex;
    align-items: center;
    color: #8a8a8a;
}
.position_icon{
    width: 28rpx;
    height: 28rpx;
    margin-right: 5rpx;
}
/* 项目经验 */

/* 小程序 */
.tips{
    color: #3399FF;
    font-size: 25rpx;
    padding: 5rpx 0;
    line-height: 20px;
    text-align: center;
}
.app-block{
    margin: 50rpx 0;
}

.app-title{
    display: inline;
    background: #EA0029;
    width: 100%;
    color: #FFF;
    padding: 10rpx;
    border-radius: 10rpx;
}
.workTitle{
    font-size: 24rpx;
    margin-top: 10rpx;
}
.look_icon{
    width: 30rpx;
    height: 30rpx;
    margin-left: 20rpx;
}

/* 下载 */
.downBtn{
    margin: 50rpx 0 0 0;
    display: flex;
    justify-content: center;
}

.downBtn button{
    background-color: black;
    color: #fff;
    width: 90%;
    font-size: 30rpx;
    font-weight: 400;
}