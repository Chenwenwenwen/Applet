/* pages/index/index.wxss */

.content-container{
    text-align: center;
    width: 100%;
    min-height: 100%;
    background: #EFEFEF;
    font-size: 0;
    padding-top: 30rpx;
}
/* 模块 */
.index-block{
    margin: 0 30rpx 30rpx 30rpx;
    padding: 30rpx;
    background-color: #FFFFFF;
    box-shadow: 0px 0px 8px 0px rgba(186,186,186,0.5);
}

/* 个人信息 */
.userImage{
    margin:20rpx 0;
}
.userImage image{
    width: 150rpx;
    height: 150rpx;
    border-radius: 100rpx;
    box-shadow: 0px 0px 10px 2px rgba(186,186,186,0.5);
}
.userName{
    font-size: 28rpx;
    color: #000;
    line-height: 28rpx;
    font-weight: bold;
}
.message-item{
    font-size: 28rpx;
    color: #000;
    line-height: 28rpx;
    margin: 15rpx 0;
}
.contact{
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin: 20rpx 0;
}
.contact-item{
    font-size: 28rpx;
    color: #000;
    line-height: 28rpx;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
}
.KFBtu{
    opacity: 0;
    position: absolute;
    width: 100% !important;
    height: 3%;
    top: 0;
    left: 0;
}

.wechat_icon{
    width: 30rpx;
    height: 30rpx;
    margin-right: 5rpx;
}